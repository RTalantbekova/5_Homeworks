<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <EditText
        android:id="@+id/etProfLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="250dp"
        />

    <EditText
        android:id="@+id/etProfPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_pass"
        app:layout_constraintTop_toBottomOf="@id/etProfLogin"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_upgrade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etProfPass"
        android:layout_marginStart="175dp"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_exit"
        app:layout_constraintTop_toBottomOf="@id/etProfPass"
        app:layout_constraintStart_toEndOf="@id/btnUpdate"
        android:background="@color/colorBlue"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorWhite"
        />


</androidx.constraintlayout.widget.ConstraintLayout>